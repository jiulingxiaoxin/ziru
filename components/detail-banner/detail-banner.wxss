/* 自如租房大体简介模块 */
.container{
  margin: 0 36rpx;
  color:#444;
  font-size: 28rpx;
}
.house-name{
  height:64rpx;
  margin:40rpx 0 24rpx 0;
  font-size: 44rpx;
  line-height: 64rpx;
}
.price-wrap{
  font-size: 44rpx;
  line-height: 60rpx;
}
.pay-type-wrap{
  height: 34rpx;
  margin: 16rpx 0 60rpx 0;
  display: flex;
  font-size: 28rpx;
  color:#999;
  justify-content: space-between;
}
.pay-style{
  font-size:32rpx;
}
.active-wrap{
  display: flex;
  justify-content: space-between;
  padding-bottom: 40rpx;
  border-bottom: 1px solid #eee;
}
.active-list text{
  font-size: 26rpx;
}
.active-list text:first-child{
  margin-right:16rpx;
}
.tags-wrap{
  margin-top: 40rpx;
}
.tags-wrap text{
  height: 26rpx;
  margin: 0 16rpx 16rpx 0;
  padding:12rpx 20rpx;
  font-size: 26rpx;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 4px;
}
.house-tag{
  height:110rpx;
  display: flex;
  align-items: center;
}
.house-tag text{
  flex:1;
  line-height: 110rpx;
  text-align: center;
}
.house-tag text:first-child::after{
  content: '2';
  margin-top: -40rpx;
  display: inline-block;
  font-size: 20rpx;
  vertical-align: text-top;
}
.house-tag view{
  width: 2rpx;
  height: 30rpx;
  background: #eee;
  display: inline-block;
}
.distance{
  height: 110rpx;
  line-height: 110rpx;
}
