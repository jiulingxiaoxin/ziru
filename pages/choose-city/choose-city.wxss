/* pages/choose-city/choose-city.wxss */
@import '../../resources/icon/iconfont.wxss';
.city-wrap {
  padding: 0 15rpx;
}

.city-wrap>view>text {
  font-size: small;
  color: #aaa;
}
.city-wrap>view>view{
  display: flex;
  justify-content: flex-start;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-top: 20rpx;
}
.city-wrap>view:nth-of-type(1)>view>view {
  width: 30%;
  background: #eee;
}
.city-wrap>view:nth-of-type(1)>view>view:nth-of-type(2) {
  background: none;
}
.city-wrap>view:nth-of-type(2)>view {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  align-items: center;
}
.city-wrap>view:nth-of-type(2)>view>text {
  width: 30%;
  height: 60rpx;
  background: #eee;
  margin-top: 20rpx;
  font-size: smaller;
}
.icon-location {
  color: orange;
  font-size: smaller;
  margin-left: 20rpx;
  position: absolute;
  left: 10rpx;
}
.city-wrap>view:nth-of-type(1)>view>view:nth-of-type(1) {
  position: relative;
}